
@{
    ViewBag.Title = "List";
}

<h2>List</h2>


<a href="/Product/create">Create</a>
<table class="table table-bordered">
    <tr>
        <th>ProductId</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Stock Quantity</th>
        <th>Category</th>
        <th></th>

    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.ProductId</td>
            <td>@d.Name</td>
            <th>@d.Description</th>
            <th>@d.Price</th>
            <th>@d.Stock Quantity</th>
            <th>@d.Category</th>
            <td>
                <a href="/Product/details/@d.Id" class="btn btn-info">Details</a>
                <a href="/Product/edit/@d.Id" class="btn btn-warning">Edit</a>
                <a href="/Product/delete/@d.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
